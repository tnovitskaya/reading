<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2><%= I18n.t('publisher.new') %></h2>

      <%= form_for(@publisher) do |f| %>

        <%= render 'fields_publisher', f: f %>

        <div class="form-group">
          <%= f.submit I18n.t("publisher.new_action"), class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to I18n.t('publisher.link_to_index'), publishers_path %>
    </div>
  </div>
<% end %>