<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2><%= I18n.t("book.#{@method}") %></h2>

      <%= form_for(@book) do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :author_ids %>
          <%= link_to I18n.t('book.new_author'), new_author_path, :class => "pull-right" %>
          <%= f.collection_select(:author_ids, Author.all, :id, :short_name, {}, {:class=>"form-control selectpicker", :required => true, :multiple => true, :title => I18n.t('book.select_authors_title') }) %>
        </div>

        <div class="form-group">
          <%= f.label :genre %>
          <%= f.text_field :genre, class: "form-control", placeholder: "" %>
        </div>

        <div class="form-group">
          <%= f.label :publisher_id %>
          <%= link_to I18n.t('book.new_publisher'), new_publisher_path, :class => "pull-right" %>
          <%= f.collection_select(:publisher_id, Publisher.all, :id, :name, {}, {:class=>"form-control selectpicker", :title => I18n.t('book.select_publisher_title') }) %>
        </div>

        <div class="form-group">
          <%= f.label :page_count %>
          <%= f.number_field :page_count, class: "form-control", placeholder: "" %>
        </div>

        <div class="form-group">
          <%= f.submit I18n.t("book.#{@method}_action"), class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to I18n.t('book.link_to_index'), books_path %>
    </div>
  </div>
<% end %>
